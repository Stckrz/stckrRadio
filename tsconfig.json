{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
	"moduleResolution": "nodenext",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
	"allowJs": true,
    "checkJs": false
  },
  "include": ["src/**/*", "assets/**/*"],
  "exclude": ["node_modules", "dist"]
}
